for i in 1 3
do
  for j in "f$i" "g$i"
  do
    pnmtopng "$j.pam" >"netpbm-$j.png"
  done
done

for i in 1 3 4
do
  for j in "f$i" "g$i"
  do
    pamtotga "$j.pam" >"netpbm-$j.tga"
  done
done
